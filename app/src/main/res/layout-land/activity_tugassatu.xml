<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Logo Section (Compact for landscape) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Logo Devrius"
                android:src="@drawable/devriuslogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:letterSpacing="0.05"
                android:text="Devrius"
                android:textColor="#4156C8"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <!-- Grid Menu 3x2 (3 Columns, 2 Rows) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#4156C8"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Menu Aplikasi"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <!-- Row 1: Form, Profile, Food -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Form Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardForm"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Form Icon"
                                android:src="@drawable/form"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Form"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardProfile"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Profile Icon"
                                android:src="@drawable/profile"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Profile"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Food Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFood"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Food Icon"
                                android:src="@drawable/food"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Food"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 2: Temperature, Kalkulator, Exit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Temperature Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTemperature"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Temperature Icon"
                                android:src="@drawable/temperatur"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Temperature"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Kalkulator Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKalkulator"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Calculator Icon"
                                android:src="@drawable/calculator"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Kalkulator"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Exit Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardExit"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#646464"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Exit Icon"
                                android:src="@drawable/exit"
                                app:tint="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Exit"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>