<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSurface"
    tools:context=".Constrain">

    <androidx.cardview.widget.CardView
        android:id="@+id/Pembatas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Display Hasil -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/Pembatas"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="?attr/colorOnSurface"
        app:cardCornerRadius="10dp"
        app:strokeColor="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHasil"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="end|center_vertical"
                android:hint="0"
                android:paddingEnd="20dp"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvHasilMini"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="16dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="22dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/tvHasil"
                android:layout_marginBottom="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Tombol C dan Del -->
    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:text="C"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintEnd_toEndOf="@id/btn2"
        app:layout_constraintStart_toStartOf="@id/btn1"/>

    <Button
        android:id="@+id/btnDelate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:textColor="#FFFFFF"
        android:text="Del"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintEnd_toStartOf="@id/btnDevide"
        app:layout_constraintStart_toEndOf="@id/btnC"/>

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:textColor="#FFFFFF"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/btnTimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDelate"/>

    <!-- Baris 1, 2, 3, X -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn1"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btnTimes"
        app:layout_constraintStart_toEndOf="@id/btn2"/>

    <Button
        android:id="@+id/btnTimes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:text="X"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/btnminus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn3"/>

    <!-- Baris 4, 5, 6, - -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#2C2C2C"
        android:text="4"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Pembatas"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#2C2C2C"
        android:text="5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/Pembatas"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#2C2C2C"
        android:text="6"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnminus"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/Pembatas"/>

    <Button
        android:id="@+id/btnminus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#3d5afe"
        android:text="-"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/Pembatas"/>

    <!-- Baris 7, 8, 9, + -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="7"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="8"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn5"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="9"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn6"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:text="+"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnminus"/>

    <!-- Baris 7(kosong), 0, ., = -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#2C2C2C"
        android:text="0"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btnKoma"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn8"/>

    <Button
        android:id="@+id/btnKoma"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#3d5afe"
        android:text="."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btnequal"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn9"/>

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#4CAF50"
        android:text="="
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnKoma"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"/>

</androidx.constraintlayout.widget.ConstraintLayout>